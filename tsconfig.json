{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es5",

    /* Modules */
    "module": "commonjs",
    /* Emit */
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "removeComments": true,

    /* Type Checking */
    "strict": true /* Enable all strict type-checking options. */,
    /* Completeness */
    "skipLibCheck": true, /* Skip type checking all .d.ts files. */
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["lib"]
}
